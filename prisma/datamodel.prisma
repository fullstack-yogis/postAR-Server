type Post {
  id: ID! @id
  createdAt: DateTime! @createdAt
  description: String!
  privacy: Boolean!
  xDistance: Float!
  yDistance: Float!
  zDistance: Float!
  rotation: Float!
  height: Float!
  width: Float!
  postPostedBy: User!
  comments: [Comment!]! @relation(name:"Comments", onDelete: CASCADE)
  marker: Marker!
}

type Marker {
  id: ID! @id
  createdAt: DateTime! @createdAt
  description: String!
  imageUrl: String!
  longitude: Float!
  latitude: Float!
  height: Float!
  markerPostedBy: User!
  plane: String!
}

type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  posts: [Post!]!
  comments: [Comment!]!
  markers: [Marker!]!
}

type Comment {
  id: ID! @id
  text: String!
  post: Post! @relation(name:"Comments", onDelete: SET_NULL )
  user: User!
  createdAt: DateTime! @createdAt
}
