type Post {
  id: ID! @id
  createdAt: DateTime! @createdAt
  description: String!
  privacy: Boolean!
  location: String!
  postedBy: User!
  comments: [Comment!]!
}

type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  posts: [Post!]!
  comments: [Comment!]!
}

type Comment {
  id: ID! @id
  text: String!
  post: Post!
  user: User!
  createdAt: DateTime! @createdAt
}
